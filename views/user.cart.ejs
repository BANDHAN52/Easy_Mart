  </nav>










  <div class="container">
    <h1 class="text-center my-5">Shopping Cart</h1>

    <div class="table-responsive">
      <table class="table">
        <thead>
          <tr>
            <th scope="col">Product</th>
            <th scope="col">Price</th>
            <th scope="col">Quantity</th>
            <th scope="col">Total</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody>
            
            <% if (quantity1 > 0 && products.length > 0 && products[0]) { %>
                <tr>
                  <td>
                    <div class="d-flex flex-column align-items-start " style="padding: 10px;" >
                      <img class="product-image" src="/<%= products[0].images[0] %>" alt="<%= products[0].title %>">
                      <span class="product-title" style="margin-top: 10px;"> <b><%= products[0].title %> </b></span>
                    </div>
                  </td>
                  
                  <td class="align-middle">$<%= products[0].price %></td>
              
                  <td class="align-middle">
                    <button class="btn btn-danger decrease-quantity">-</button>
                    <span id="quantityText1" class="quantity" style="padding-left: 20px; padding-right: 20px; text-align: center;"><%= quantity1 %></span>
                    <button class="btn btn-success increase-quantity">+</button>
                  </td>
                  
                  <td class="align-middle">$<%= products[0].price %></td>
                  <td class="align-middle">
                    <button class="btn btn-danger remove-item">×</button>
                  </td>
                  
                </tr>
                <% } %>
                
                <% if (quantity2 > 0 && products.length > 0 && products[1]) { %>
                <tr>
                  <td>
                    <div class="d-flex flex-column align-items-start" style="padding: 10px;">
                        <img class="product-image" src="/<%= products[1].images[0] %>" alt="<%= products[1].title %>">
                        <span class="product-title" style="margin-top: 10px;"> <b><%= products[1].title %> </b></span>
                    </div>
                  </td>
                  
                  <td class="align-middle">$<%= products[1].price %></td>
              
                  <td class="align-middle">
                    <button class="btn btn-danger decrease-quantity">-</button>
                    <span id="quantityText2" class="quantity" style="padding-left: 20px; padding-right: 20px; text-align: center;"><%= quantity2 %></span>
                    <button class="btn btn-success increase-quantity">+</button>
                  </td>
                  
                  <td class="align-middle">$<%= products[1].price %></td>
                  <td class="align-middle">
                    <button class="btn btn-danger remove-item">×</button>
                  </td>
                  
                </tr>
                <% } %>
                
                <% if (quantity3 > 0 && products.length > 0 && products[2]) { %>
                <tr>
                  <td>
                    <div class="d-flex flex-column align-items-start" style="padding: 10px;">
                        <img class="product-image" src="/<%= products[2].images[0] %>" alt="<%= products[2].title %>">
                        <span  class="product-title" style="margin-top: 10px;"><b><%= products[2].title %> </b></span>
                    </div>
                  </td>
                  
                  <td class="align-middle">$<%= products[2].price %></td>
              
                  <td class="align-middle">
                    <button class="btn btn-danger decrease-quantity">-</button>
                    <span id="quantityText3" class="quantity" style="padding-left: 20px; padding-right: 20px; text-align: center;"><%= quantity3 %></span>
                    <button class="btn btn-success increase-quantity">+</button>
                  </td>
                  
                  <td class="align-middle">$<%= products[2].price %></td>
                  <td class="align-middle">
                    <button class="btn btn-danger remove-item">×</button>
                  </td>
                  
                </tr>
                <% } %>
        </tbody>    
      </table>
    </div>

    <div class="cart-total text-end mt-4">
        <h3><b>Total </h3>
        <h5 id="quantityTextTotal">Total: $0</h5>
        <form id="checkout" action="/api/bank/checkout" method="GET">
            <input id="quantityInput1" type="hidden" name="quantity1" value="">
            <input id="quantityInput2" type="hidden" name="quantity2" value="">
            <input id="quantityInput3" type="hidden" name="quantity3" value="">
            <input id="quantityInputTotal" type="hidden" name="quantityTotal" value="">
            <button class="btn btn-primary mt-3" >proceed to checkout</button>
          </form>
      
     
    </div>


   

  </div>

  <div class="cart-message"></div>

  
  
  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const decreaseButtons = document.querySelectorAll('.decrease-quantity');
      const increaseButtons = document.querySelectorAll('.increase-quantity');
      const removeButtons = document.querySelectorAll('.remove-item');
  
      decreaseButtons.forEach(button => {
        button.addEventListener('click', function() {
          const quantityElement = button.parentNode.querySelector('.quantity');
          let quantity = parseInt(quantityElement.textContent);
          if (quantity > 1) {
            quantity--;
            quantityElement.textContent = quantity;
            updateTotal(button);
          }
        });
      });
  
      increaseButtons.forEach(button => {
        button.addEventListener('click', function() {
          const quantityElement = button.parentNode.querySelector('.quantity');
          let quantity = parseInt(quantityElement.textContent);
          quantity++;
          quantityElement.textContent = quantity;
          updateTotal(button);
        });
      });
  
      removeButtons.forEach(button => {
        button.addEventListener('click', function() {
          const row = button.parentNode.parentNode;
          row.parentNode.removeChild(row);
          updateTotal(button);
        });
      });
  
      function updateTotal(button) {
        const row = button.parentNode.parentNode;
        const priceElement = row.querySelector('td:nth-child(2)');
        const quantityElement = row.querySelector('.quantity');
        const totalElement = row.querySelector('td:nth-child(4)');
        const cartTotalElement = document.querySelector('.cart-total h5');
  
        const price = parseFloat(priceElement.textContent.replace('$', ''));
        const quantity = parseInt(quantityElement.textContent);
        const total = price * quantity;
  
        totalElement.textContent = '$' + total.toFixed(2);
  
        let cartTotal = 0;
        const totalElements = document.querySelectorAll('td:nth-child(4)');
        totalElements.forEach(element => {
          cartTotal += parseFloat(element.textContent.replace('$', ''));
        });
  
        cartTotalElement.textContent = '$' + cartTotal.toFixed(2);
  
        // Update quantity values and cart total in the form
        const quantityElements = document.querySelectorAll('.quantity');
        const quantities = Array.from(quantityElements).map(element => parseInt(element.textContent));
        const quantity1 = quantities[0] || 0;
        const quantity2 = quantities[1] || 0;
        const quantity3 = quantities[2] || 0;
        const cartTotalValue = parseFloat(cartTotalElement.textContent.replace('$', ''));
  
        document.getElementById('quantityInput1').value = quantity1;
        document.getElementById('quantityInput2').value = quantity2;
        document.getElementById('quantityInput3').value = quantity3;
        document.getElementById('quantityInputTotal').value = cartTotalValue;
      }
  
      // Call the updateTotal function for each row initially
      const rows = document.querySelectorAll('tbody tr');
      rows.forEach(row => {
        updateTotal(row.querySelector('.increase-quantity'));
      });
    });


    document.addEventListener('DOMContentLoaded', function() {
  const checkoutForm = document.getElementById('checkout');

  if (checkoutForm) {
    checkoutForm.addEventListener('submit', function(event) {
      console.log('event to prevent');
      const cartTotalElement = document.getElementById('quantityTextTotal');
      const cartTotalValue = parseFloat(cartTotalElement.textContent.replace('$', ''));

      console.log('cartvalue: '+cartTotalValue);
      console.log('cartelement: '+cartTotalElement.textContent);

      if (cartTotalValue === 0 || isNaN(cartTotalValue)) {
        console.log('if');
        event.preventDefault(); // Prevent form submission
        const cartMessage = document.querySelector('.cart-message');
        cartMessage.textContent = 'Your cart is empty. Please add items before proceeding to checkout.';
        cartMessage.classList.add('alert', 'alert-warning');
        cartMessage.scrollIntoView({ behavior: 'smooth' });
      }
    });
  }
});



  </script>
  
<script src="/js/bootstrap.bundle.min.js"></script>
</body>
</html>
